@model HostelManagement.Models.FoodMenu

@{
    ViewBag.Title = "Delete Food Menu";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3><i class="fas fa-exclamation-triangle"></i> Delete Food Menu</h3>
                </div>
                <div class="card-body">
                    <p class="text-danger"><strong>Are you sure you want to delete this menu item?</strong></p>

                    <div class="menu-details bg-light p-3 rounded">
                        <div class="row">
                            <div class="col-12">
                                <p><strong>Day:</strong> <span class="badge bg-primary">@Model.DayOfWeek</span></p>
                                <p><strong>Meal Type:</strong> <span class="badge bg-@Model.MealColor"><i class="@Model.MealIcon"></i> @Model.MealType</span></p>
                                <p><strong>Menu Items:</strong> @Model.MenuItems</p>
                                @if (!string.IsNullOrEmpty(Model.Description))
                                {
                                    <p><strong>Description:</strong> @Model.Description</p>
                                }
                                <p><strong>Created:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy")</p>
                                <p><strong>Last Updated:</strong> @Model.UpdatedDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-info-circle"></i>
                        <strong>Note:</strong> This will permanently remove this menu item from the weekly schedule.
                    </div>

                    @using (Html.BeginForm("Delete", "FoodMenu", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            @Html.ActionLink("Cancel", "WeeklyMenu", null, new { @class = "btn btn-secondary me-md-2" })
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Menu
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
