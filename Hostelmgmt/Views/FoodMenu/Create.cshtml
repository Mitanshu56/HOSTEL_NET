@model HostelManagement.Models.FoodMenu

@{
    ViewBag.Title = "Add Food Menu";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-plus-circle"></i> Add Food Menu</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "FoodMenu", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.DayOfWeek, new { @class = "form-label" })
                                @Html.DropDownListFor(m => m.DayOfWeek, ViewBag.DaysOfWeek as List<SelectListItem>, "-- Select Day --", new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.DayOfWeek, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.MealType, new { @class = "form-label" })
                                @Html.DropDownListFor(m => m.MealType, ViewBag.MealTypes as List<SelectListItem>, "-- Select Meal Type --", new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.MealType, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.MenuItems, new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.MenuItems, new { @class = "form-control", rows = "3", placeholder = "Enter menu items separated by commas (e.g., Rice, Dal, Sabzi, Roti)" })
                            @Html.ValidationMessageFor(m => m.MenuItems, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">List all food items for this meal</small>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "2", placeholder = "Optional description about the meal" })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">Optional: Add any special notes or description</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            @Html.ActionLink("Cancel", "WeeklyMenu", null, new { @class = "btn btn-secondary me-md-2" })
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Menu
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
