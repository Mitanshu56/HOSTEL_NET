@model Dictionary<string, List<HostelManagement.Models.FoodMenu>>

@{
    ViewBag.Title = "Weekly Food Menu";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-calendar-week"></i> Weekly Food Menu</h2>
                <div>
                    @Html.ActionLink("Add Menu Item", "Create", null, new { @class = "btn btn-primary me-2" })
                    @Html.ActionLink("Manage All Menus", "Index", null, new { @class = "btn btn-outline-primary" })
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                @foreach (var dayMenu in Model)
                {
                    <div class="col-lg-6 col-xl-4 mb-4">
                        <div class="card h-100">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-calendar-day"></i> @dayMenu.Key
                                </h5>
                            </div>
                            <div class="card-body">
                                @if (dayMenu.Value.Any())
                                {
                                    for (int i = 0; i < dayMenu.Value.Count; i++)
                                    {
                                        var menu = dayMenu.Value[i];
                                        <div class="meal-item mb-3">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="text-@menu.MealColor">
                                                    <i class="@menu.MealIcon"></i> @menu.MealType
                                                </h6>
                                                <div class="btn-group btn-group-sm">
                                                    @Html.ActionLink("Edit", "Edit", new { id = menu.Id }, new { @class = "btn btn-outline-warning btn-sm" })
                                                    @Html.ActionLink("Delete", "Delete", new { id = menu.Id }, new { @class = "btn btn-outline-danger btn-sm" })
                                                </div>
                                            </div>
                                            <p class="mb-1"><strong>Items:</strong> @menu.MenuItems</p>
                                            @if (!string.IsNullOrEmpty(menu.Description))
                                            {
                                                <p class="mb-0 text-muted small">@menu.Description</p>
                                            }
                                        </div>
                                        if (i < dayMenu.Value.Count - 1)
                                        {
                                            <hr class="my-2">
                                        }
                                    }
                                }
                                else
                                {
                                    <p class="text-muted text-center py-3">
                                        <i class="fas fa-utensils fa-2x mb-2 d-block"></i>
                                        No menu items for this day
                                    </p>
                                }
                            </div>
                            <div class="card-footer">
                                @Html.ActionLink("View " + dayMenu.Key + " Details", "DayMenu", new { day = dayMenu.Key }, new { @class = "btn btn-sm btn-outline-primary w-100" })
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Any(d => d.Value.Any()))
            {
                <div class="text-center py-5">
                    <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No menu items found</h4>
                    <p class="text-muted">Start by adding your first menu item for the week.</p>
                    @Html.ActionLink("Add First Menu Item", "Create", null, new { @class = "btn btn-primary btn-lg" })
                </div>
            }
        </div>
    </div>
</div>
