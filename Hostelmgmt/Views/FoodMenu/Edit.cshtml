@model HostelManagement.Models.FoodMenu

@{
    ViewBag.Title = "Edit Food Menu";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-edit"></i> Edit Food Menu</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "FoodMenu", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.CreatedDate)
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.DayOfWeek, new { @class = "form-label" })
                                @Html.DropDownListFor(m => m.DayOfWeek, ViewBag.DaysOfWeek as List<SelectListItem>, new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.DayOfWeek, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.MealType, new { @class = "form-label" })
                                @Html.DropDownListFor(m => m.MealType, ViewBag.MealTypes as List<SelectListItem>, new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.MealType, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.MenuItems, new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.MenuItems, new { @class = "form-control", rows = "3" })
                            @Html.ValidationMessageFor(m => m.MenuItems, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">List all food items for this meal</small>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "2" })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">Optional: Add any special notes or description</small>
                        </div>

                        <div class="form-check mb-3">
                            @Html.CheckBoxFor(m => m.IsActive, new { @class = "form-check-input" })
                            @Html.LabelFor(m => m.IsActive, new { @class = "form-check-label" })
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Created:</strong> @Model.CreatedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            @Html.ActionLink("Cancel", "WeeklyMenu", null, new { @class = "btn btn-secondary me-md-2" })
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Menu
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
