@model HostelManagement.Models.Student

@{
    ViewBag.Title = "Student Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3><i class="fas fa-user"></i> Student Details</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Student Name:</label>
                                <p class="form-control-plaintext fs-5">@Model.Name</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email:</label>
                                <p class="form-control-plaintext">
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Phone:</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        <a href="tel:@Model.Phone">@Model.Phone</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Room Assignment:</label>
                                <p class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model.RoomDetails))
                                    {
                                        <span class="badge bg-success fs-6">@Model.RoomDetails</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning fs-6">No Room Assigned</span>
                                    }
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Date of Joining:</label>
                                <p class="form-control-plaintext">@Model.DateOfJoining.ToString("MMMM dd, yyyy")</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Status:</label>
                                <p class="form-control-plaintext">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Address:</label>
                        <p class="form-control-plaintext">
                            @if (!string.IsNullOrEmpty(Model.Address))
                            {
                                @Model.Address
                            }
                            else
                            {
                                <span class="text-muted">Address not provided</span>
                            }
                        </p>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        @Html.ActionLink("Back to Students", "Index", null, new { @class = "btn btn-secondary me-md-2" })
                        @Html.ActionLink("Edit Student", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning me-md-2" })
                        @Html.ActionLink("Remove Student", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
