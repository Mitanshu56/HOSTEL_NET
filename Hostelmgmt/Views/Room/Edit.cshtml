@model HostelManagement.Models.Room

@{
    ViewBag.Title = "Edit Room";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3><i class="fas fa-edit"></i> Edit Room @Model.RoomNumber</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Edit", "Room", FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.CreatedDate)
                        @Html.HiddenFor(m => m.CurrentOccupancy)
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.RoomNumber, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.RoomNumber, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.RoomNumber, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.FloorNumber, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.FloorNumber, new { @class = "form-control", type = "number" })
                                @Html.ValidationMessageFor(m => m.FloorNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.RoomType, new { @class = "form-label" })
                                @Html.DropDownListFor(m => m.RoomType, ViewBag.RoomTypes as List<SelectListItem>, new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.RoomType, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.SharingType, new { @class = "form-label" })
                                @Html.DropDownListFor(m => m.SharingType, ViewBag.SharingTypes as List<SelectListItem>, new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.SharingType, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.ACType, new { @class = "form-label" })
                                @Html.DropDownListFor(m => m.ACType, ViewBag.ACTypes as List<SelectListItem>, new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.ACType, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.RentAmount, new { @class = "form-label" })
                                <div class="input-group">
                                    <span class="input-group-text">₹</span>
                                    @Html.TextBoxFor(m => m.RentAmount, new { @class = "form-control", type = "number", step = "0.01" })
                                </div>
                                @Html.ValidationMessageFor(m => m.RentAmount, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Current Occupancy:</strong> @Model.CurrentOccupancy out of @Model.MaxOccupancy students
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary me-md-2" })
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Room
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
