@model IEnumerable<HostelManagement.Models.Room>

@{
    ViewBag.Title = "Rooms Management";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2><i class="fas fa-bed"></i> Hostel Rooms</h2>
                @Html.ActionLink("Add New Room", "Create", null, new { @class = "btn btn-primary" })
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="row">
                @foreach (var room in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 @(room.HasVacancy ? "border-success" : "border-warning")">
                            <div class="card-header @(room.HasVacancy ? "bg-success" : "bg-warning") text-white">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">
                                        <i class="fas fa-door-open"></i> Room @room.RoomNumber
                                    </h5>
                                    <span class="badge @(room.HasVacancy ? "bg-light text-success" : "bg-light text-warning")">
                                        @room.AvailabilityStatus
                                    </span>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="mb-2">
                                    <strong><i class="fas fa-users"></i> Sharing:</strong>
                                    <span class="badge bg-primary">@room.SharingDisplay</span>
                                </div>
                                <div class="mb-2">
                                    <strong><i class="fas fa-snowflake"></i> Type:</strong>
                                    <span class="badge @(room.ACType == "AC" ? "bg-info" : "bg-secondary")">@room.ACType</span>
                                </div>
                                <div class="mb-2">
                                    <strong><i class="fas fa-rupee-sign"></i> Rent:</strong>
                                    <span class="text-success fw-bold">₹@room.RentAmount.ToString("N0")</span>
                                </div>
                                <div class="mb-2">
                                    <strong><i class="fas fa-layer-group"></i> Floor:</strong>
                                    @(room.FloorNumber?.ToString() ?? "N/A")
                                </div>
                                <div class="mb-3">
                                    <strong><i class="fas fa-chart-pie"></i> Occupancy:</strong>
                                    @{
                                        var roomOccupancyPercentage = (room.CurrentOccupancy * 100.0 / room.MaxOccupancy);
                                    }
                                    <div class="progress mt-1">
                                        <div class="progress-bar @(room.CurrentOccupancy == room.MaxOccupancy ? "bg-danger" : "bg-success")"
                                             style="width: @(roomOccupancyPercentage)%">
                                            @room.CurrentOccupancy/@room.MaxOccupancy
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group w-100" role="group">
                                    @Html.ActionLink("View", "Details", new { id = room.Id }, new { @class = "btn btn-sm btn-info" })
                                    @Html.ActionLink("Edit", "Edit", new { id = room.Id }, new { @class = "btn btn-sm btn-warning" })
                                    @Html.ActionLink("Delete", "Delete", new { id = room.Id }, new { @class = "btn btn-sm btn-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-bed fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No rooms found</h4>
                    <p class="text-muted">Start by adding your first room to the hostel.</p>
                    @Html.ActionLink("Add First Room", "Create", null, new { @class = "btn btn-primary" })
                </div>
            }
        </div>
    </div>
</div>
