@model HostelManagement.Models.Room

@{
    ViewBag.Title = "Delete Room";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3><i class="fas fa-exclamation-triangle"></i> Delete Room</h3>
                </div>
                <div class="card-body">
                    <p class="text-danger"><strong>Are you sure you want to delete this room?</strong></p>

                    <div class="room-details bg-light p-3 rounded">
                        <div class="row">
                            <div class="col-6">
                                <p><strong>Room Number:</strong> @Model.RoomNumber</p>
                                <p><strong>Room Type:</strong> @Model.RoomType</p>
                                <p><strong>Sharing:</strong> @Model.SharingDisplay</p>
                            </div>
                            <div class="col-6">
                                <p><strong>AC Type:</strong> @Model.ACType</p>
                                <p><strong>Rent:</strong> ₹@Model.RentAmount.ToString("N0")</p>
                                <p><strong>Floor:</strong> @(Model.FloorNumber?.ToString() ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <p><strong>Current Occupancy:</strong> @Model.CurrentOccupancy out of @Model.MaxOccupancy students</p>
                                @if (Model.CurrentOccupancy > 0)
                                {
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle"></i>
                                        This room currently has @Model.CurrentOccupancy student(s) assigned. Please reassign them before deleting.
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm("Delete", "Room", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary me-md-2" })
                            <button type="submit" class="btn btn-danger" @(Model.CurrentOccupancy > 0 ? "disabled" : "")>
                                <i class="fas fa-trash"></i> Delete Room
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
