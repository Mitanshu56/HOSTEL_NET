@{
    ViewBag.Title = "Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white rounded p-5 mb-4">
                <div class="container-fluid py-5">
                    <h1 class="display-5 fw-bold">
                        <i class="fas fa-home"></i> Welcome to Hostel Management System
                    </h1>
                    <p class="col-md-8 fs-4">
                        Efficiently manage your hostel operations with our comprehensive student and room management system.
                    </p>
                    <div class="mt-4">
                        @Html.ActionLink("Manage Students", "Index", "Student", null, new { @class = "btn btn-light btn-lg me-3" })
                        @Html.ActionLink("Manage Rooms", "Index", "Room", null, new { @class = "btn btn-outline-light btn-lg" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Students</h4>
                            <h2 class="mb-0">
                                <i class="fas fa-users"></i>
                            </h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-graduate fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("View All Students", "Index", "Student", null, new { @class = "text-white text-decoration-none" })
                    <i class="fas fa-arrow-right float-end"></i>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Rooms</h4>
                            <h2 class="mb-0">
                                <i class="fas fa-bed"></i>
                            </h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-door-open fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("View All Rooms", "Index", "Room", null, new { @class = "text-white text-decoration-none" })
                    <i class="fas fa-arrow-right float-end"></i>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Available</h4>
                            <h2 class="mb-0">
                                <i class="fas fa-check-circle"></i>
                            </h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-door-closed fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Available Room Slots", "Index", "Room", null, new { @class = "text-white text-decoration-none" })
                    <i class="fas fa-info-circle float-end"></i>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Occupied</h4>
                            <h2 class="mb-0">
                                <i class="fas fa-user-check"></i>
                            </h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    @Html.ActionLink("Occupied Room Slots", "Index", "Room", null, new { @class = "text-white text-decoration-none" })
                    <i class="fas fa-chart-bar float-end"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-plus-circle"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @Html.ActionLink("Add New Student", "Create", "Student", null, new { @class = "btn btn-primary btn-lg" })
                        @Html.ActionLink("Add New Room", "Create", "Room", null, new { @class = "btn btn-info btn-lg" })
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-line"></i> System Overview</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <i class="fas fa-info-circle text-info"></i>
                        Manage your hostel efficiently with our integrated student and room management system.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success"></i> Track student information</li>
                        <li><i class="fas fa-check text-success"></i> Manage room assignments</li>
                        <li><i class="fas fa-check text-success"></i> Monitor occupancy rates</li>
                        <li><i class="fas fa-check text-success"></i> Handle AC/Non-AC preferences</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
